{
  "name": "polaris.shopify.com",
  "version": "0.38.0",
  "private": true,
  "scripts": {
    "build": "yarn gen-assets && playroom build && next build && cp -r public ./.next/standalone/polaris.shopify.com/ && mkdirp ./.next/standalone/polaris.shopify.com/.next && cp -r .next/static ./.next/standalone/polaris.shopify.com/.next/",
    "start": "cd ./.next/standalone/polaris.shopify.com && node ./server.js",
    "dev": "yarn get-props && yarn gen-assets && run-p dev:*",
    "dev:server": "open http://localhost:3000/contributing/website && next dev",
    "dev:watch-md": "ts-node scripts/watchNav.ts",
    "dev:playroom": "rm -rf ./public/playroom && playroom start",
    "lint": "run-p lint:*",
    "lint:js": "TIMING=1 eslint --cache .",
    "lint:styles": "stylelint '**/*.{css,scss}'",
    "clean": "rm -rf .turbo node_modules .next *.tsbuildinfo",
    "create-component": "generact --root src/components src/components/Template/Template.tsx",
    "get-props": "tsc ./scripts/get-props/src/get-props.ts --target esnext --module node16 --types \"react\" --outDir ./scripts/tmp && node ./scripts/tmp/scripts/get-props/src/get-props.js && rm -rf ./scripts/tmp",
    "gen-assets": "ts-node scripts/createNav.ts && ts-node scripts/createSiteMap.ts"
  },
  "dependencies": {
    "@floating-ui/react-dom-interactions": "^0.10.1",
    "@headlessui/react": "^1.6.5",
    "@shopify/polaris": "^10.33.0",
    "@shopify/polaris-icons": "^6.11.3",
    "@shopify/polaris-tokens": "^6.7.0",
    "@types/react-syntax-highlighter": "^15.5.6",
    "codesandbox": "^2.2.3",
    "endent": "^2.1.0",
    "formidable": "^2.1.1",
    "fuse.js": "^6.5.3",
    "image-size": "^1.0.2",
    "lodash.throttle": "^4.1.1",
    "nanoid": "^4.0.1",
    "next": "^13.2.4",
    "prismjs": "^1.27.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^8.0.2",
    "react-merge-refs": "^2.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "rehype-slug": "^5.1.0",
    "remark-definition-list": "^1.2.0",
    "remark-gfm": "^3.0.1",
    "sharp": "^0.31.2",
    "use-dark-mode": "^2.3.1"
  },
  "devDependencies": {
    "@types/formidable": "^2.0.5",
    "@types/gtag.js": "^0.0.10",
    "@types/lodash.throttle": "^4.1.7",
    "@types/marked": "^4.0.3",
    "@types/node": "17.0.21",
    "@types/prismjs": "^1.26.0",
    "@types/react": "18.0.15",
    "babel-plugin-preval": "^5.1.0",
    "chokidar": "^3.5.3",
    "eslint": "8.10.0",
    "eslint-config-next": "^13.0.0",
    "generact": "^0.4.0",
    "globby": "^11.1.0",
    "p-map": "^5.5.0",
    "playroom": "^0.28.0",
    "puppeteer": "^16.0.0",
    "rehype-raw": "^6.1.1",
    "sass": "^1.49.9",
    "style-loader": "^3.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
